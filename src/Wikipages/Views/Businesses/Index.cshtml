@model IEnumerable<Wikipages.Models.Business>


@{
    ViewData["Name"] = "Business";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>To Do List</h2>
<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.name)
        </th>
        <th></th>
    </tr>

    @foreach (var listBusiness in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelBusiness => listBusiness.Name)
            </td>
            <td>
                @Html.DisplayFor(modelBusiness => listBusiness.Category.name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = listBusiness.id }) |
                @Html.ActionLink("Details", "Details", new { id = listBusiness.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = listBusiness.id })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Create New", "Create")
</p>